{
  "name": "python-pptx-wasm",
  "private": false,
  "description": "A WASM JavaScript library for manipulating PowerPoint presentations via Python-pptx and pyodide.",
  "version": "0.0.0",
  "author": "yikenman",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "dev": "rimraf dist && tsc -p tsconfig.build.json --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.13.0"
  },
  "homepage": "https://github.com/yikenman/python-pptx-wasm",
  "keywords": [
    "frontend",
    "javascript",
    "powerpoint",
    "pptx",
    "presentation",
    "pyopipe",
    "python-pptx",
    "wasm",
    "webassembly"
  ],
  "peerDependencies": {
    "pyodide": "^0.28.0"
  },
  "repository": "https://github.com/yikenman/python-pptx-wasm",
  "type": "module"
}
