    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test"
  ]
}
